            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"

            android:text= "Name : Tony Stark"

            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/imgTony"
            />
        <TextView
            android:id="@+id/txtSecondLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="50dp"
            android:text="Char:Ironman"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/imgTony"
            android:layout_below="@id/txtLayoutHeader"
            />
            <TextView
                android:id="@+id/txtThirdLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="50dp"
                android:text="Age:25"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/imgTony"
                android:layout_below="@id/txtSecondLine"
                />


        <ImageView
            android:id="@+id/imgTony"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/tony_strak"
            android:layout_margin="12dp"

            />

